[branch]
  autosetupmerge = true

[color]
	ui = auto
  branch = true
  diff = true
  interactive = true
  status = true

[color "branch"]
  current = green
  remote = yellow
  upstream = cyan

[commit]
	template = ~/.config/git/commitmsg

[core]
	excludesfile = ~/.config/git/ignore
	attributesfile = ~/.config/git/attributes
  editor = nvim
  pager = delta
  autocrlf = false
  whitespace = space-before-tab,-indent-with-non-tab,trailing-space

[credential]
	helper = store

[delta]
  plus-style = "syntax #012800"
  minus-style = "syntax #340001"
  syntax-theme = Monokai Extended
  navigate = true

[diff]
  tool = delta
  guitool = lazygit
  renames = true
  mnemonicPrefix = true

[fetch]
  recurseSubmodules = on-demand
  prune = true

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

[grep]
  break = true
  heading = true
  lineNumber = true
  extendedRegexp = true

[help]
	autocorrect = 20

[hub]
	protocol = https

[include]
  path = ~/.config/git/user
  path = ~/.config/git/aliases

[init]
	defaultBranch = main
  templatedir = ~/.config/git/templates

[interactive]
  diffFilter = delta --color-only

[log]
  abbrevCommit = true
  follow = true

[merge]
  ff = only

[pager]
  diff = delta
  log = delta
  reflog = delta
  show = delta

[pull]
  rebase = false

[push]
  default = current

[rebase]
  autosquash = true

[status]
  submoduleSummary = true
  showUntrackedFiles = all
