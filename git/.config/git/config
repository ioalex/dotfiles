[branch]
  autosetupmerge = true

[color]
  branch = auto
  diff = auto
  interactive = auto
  status = auto
	ui = auto

[color "branch"]
  current = green
  remote = yellow

[commit]
	template = ~/.config/git/commitmsg

[core]
	excludesfile = ~/.config/git/ignore
	attributesfile = ~/.config/git/attributes
  editor = nvim

[credential]
	helper = store

[delta]
  plus-style = "syntax #012800"
  minus-style = "syntax #340001"
  syntax-theme = Monokai Extended
  navigate = true

[diff]
  tool = delta
  guitool = lazygit
  renames = copies

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

[help]
	autocorrect = 20

[hub]
	protocol = https

[include]
  path = ~/.config/git/user
  path = ~/.config/git/aliases

[init]
	defaultBranch = main

[interactive]
  diffFilter = delta --color-only

[pager]
  diff = delta
  log = delta
  reflog = delta
  show = delta

[push]
  default = current
