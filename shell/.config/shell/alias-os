# Platform-specific aliases

UNAMECHECK=$(uname -r);

if [[ $UNAMECHECK == *[mM]"icrosoft"* ]] && [[ "$OSTYPE" == "linux-gnu"* ]]; then
  alias \
    o=explorer.exe \
    open=explorer.exe \
    st=speedtest-cli \
    speedtest=speedtest-cli
elif [[ "$OSTYPE" == "linux-gnu"* ]]; then
	alias \
    o=xdg-open \
    open=xdg-open \
    st=speedtest++ \
    speedtest=speedtest++ \
    gpu="grep -i memory /var/log/Xorg.0.log" \
    lck="betterlockscreen --lock dim" \
    sdn="sudo shutdown -h now" \
    sleep="sudo systemctl suspend" \
    zzz="sudo systemctl suspend" \
    xbk='xbindkeys -f "$HOME/.config/xbindkeys/config"'
elif [[ "$OSTYPE" == "darwin"* ]]; then
	alias \
    o=open \
    st=speedtest-cli \
    speedtest=speedtest-cli

  # Brew commands
  alias \
    b=brew \
    br=brew \
    bs="brew search" \
    bsd="brew search --desc" \
    bi="brew info" \
    bis="brew install" \
    bui="brew uninstall" \
    bdr="brew doctor" \
    bcu="brew cleanup" \
    bdu="brew bundle dump --describe" \
    bls="brew ls" \
    cask="brew cask" \
    ci="cask info" \
    cis="cask install" \
    cus="cask uninstall" \
    cuz="cask zap" \
    blv="brew leaves" \
    brewup="brew -v update && brew -v upgrade && brew cask upgrade && brew -v cleanup --prune=5 && brew doctor"
else
	echo "No platform-specific aliases for this system."
fi
