# Platform-specific aliases

UNAMECHECK=$(uname -r);

if [[ $UNAMECHECK == *[mM]"icrosoft"* ]] && [[ "$OSTYPE" == "linux-gnu"* ]]; then
  alias \
    o=explorer.exe \
    open=explorer.exe \
    st=speedtest-cli \
    speedtest=speedtest-cli
elif [[ "$OSTYPE" == "linux-gnu"* ]]; then
	alias \
    o=xdg-open \
    open=xdg-open \
    pbcopy="xclip -selection clipboard -in" \
    pbpaste="xclip -selection clipboard -out" \
    st=speedtest++ \
    speedtest=speedtest++ \
    upac="yay -Syu --noconfirm" \
    get="yay -S" \
    plist="pacman -Qe | awk '{print $1}' > ~/dotfiles/@arch/.config/.pacman.list ;echo 'updated ~/.config/.pacman.list'" \
    orphan="sudo pacman -Qtdq" \
    gpu="grep -i memory /var/log/Xorg.0.log" \
    lck="betterlockscreen --lock dim" \
    sdn="sudo shutdown -h now" \
    sleep="sudo systemctl suspend" \
    zzz="sudo systemctl suspend" \
    mirror="sudo reflector --country au --latest 15 --protocol https --sort rate --save /etc/pacman.d/mirrorlist --verbose"

  if command -v powerprofilesctl &> /dev/null; then
  alias \
    pp=powerprofilesctl \
    ppb="powerprofilesctl set balanced" \
    pps="powerprofilesctl set power-saver"
  fi

elif [[ "$OSTYPE" == "darwin"* ]]; then
	alias \
    o=open \
    pbc=pbcopy \
    pbp=pbpaste \
    cpu-temp=osx-cpu-temp \
    st=speedtest-cli \
    speedtest=speedtest-cli

  # Show/hide hidden files in Finder
  alias \
    show="defaults write com.apple.finder AppleShowAllFiles -bool true && killall Finder" \
    hide="defaults write com.apple.finder AppleShowAllFiles -bool false && killall Finder"

# Hide/show all desktop icons (useful when presenting)
  alias \
    hidedesktop="defaults write com.apple.finder CreateDesktop -bool false && killall Finder" \
  showdesktop="defaults write com.apple.finder CreateDesktop -bool true && killall Finder"

  # Brew commands
  alias \
    brew="nocorrect brew" \
    b=brew \
    br=brew \
    bs="brew search" \
    bsd="brew search --desc" \
    bi="brew info" \
    bis="brew install" \
    bui="brew uninstall" \
    bdr="brew doctor" \
    bcu="brew cleanup" \
    bdu="brew bundle dump --describe" \
    bls="brew ls" \
    cask="brew cask" \
    ci="cask info" \
    cis="cask install" \
    cus="cask uninstall" \
    cuz="cask zap" \
    blv="brew leaves" \
    brewup="brew -v update && brew -v upgrade && brew cask upgrade && brew -v cleanup --prune=5 && brew doctor"
else
	echo "No platform-specific aliases for this system."
fi
